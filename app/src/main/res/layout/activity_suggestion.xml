<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tn.esprit.baladity.SuggestionActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <TextView
        android:textColor="#465e9e"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Titre"
        android:textStyle="bold"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="titre"
        android:id="@+id/sugg_titre"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:textColor="#465e9e"

            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Description"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/sugg_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="description.."
            android:inputType="text|textMultiLine"
            android:gravity="top"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Envoyer"
            android:gravity="center"
            android:background="@drawable/selector_xml_btn_yellow"
            android:layout_gravity="center"
            android:id="@+id/btn_envoyer"
           />


    </LinearLayout>



</LinearLayout>
</LinearLayout>